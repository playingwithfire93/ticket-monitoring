## Example environment variables for local development
# Copy to `.env` or set in your environment before running

ADMIN_PASSWORD=change_me_to_a_strong_password
SECRET_KEY=change_me_to_a_random_secret

# Database (Postgres example)
DATABASE_URL=postgresql://user:password@db.example.com:5432/musicals

# Redis for rate-limiter
RATELIMIT_STORAGE_URL=redis://127.0.0.1:6379/0

# Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Discord
DISCORD_WEBHOOK_ALERTS=
DISCORD_WEBHOOK_SUGGESTIONS=

# SMTP (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SENDER_EMAIL=
